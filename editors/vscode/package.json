{
  "name": "witcherscript-ide",
  "displayName": "WitcherScript IDE",
  "publisher": "SpontanCombust",
  "description": "Language support for Witcher 3's scripting language WitcherScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/SpontanCombust/witcherscript-ide"
  },
  "license": "MIT OR Apache-2.0",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/witcherscript.toml",
    "workspaceContains:**/*.ws"
  ],
  "main": "./out/main",
  "contributes": {
    "languages": [
      {
        "id": "witcherscript",
        "aliases": [
          "Witcher Script",
          "WitcherScript",
          "ws"
        ],
        "extensions": [
          ".ws"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/file-icon.svg",
          "dark": "./media/file-icon.svg"
        }
      }
    ],
    "configuration": {
      "title": "WitcherScript IDE",
      "properties": {
        "witcherscript-ide.gameDirectory": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to Witcher 3's root game directory (containing bin, content, Mods folders etc.). This will effectively add `content` and `Mods` folders to project repositories."
        },
        "witcherscript-ide.projectRepositories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Paths to custom directories containing WitcherScript projects. Projects may not need to contain manifest files, but they still require to have proper file structure."
        }
      }
    },
    "commands": [
      {
        "command": "witcherscript-ide.projects.init",
        "title": "Initialize project...",
        "category": "WitcherScript-IDE"
      },
      {
        "command": "witcherscript-ide.projects.create",
        "title": "Create a new project...",
        "category": "WitcherScript-IDE"
      },
      {
        "command": "witcherscript-ide.debug.showScriptAst",
        "title": "Show script AST",
        "category": "WitcherScript-IDE (debug)",
        "enablement": "editorLangId == 'witcherscript'"
      }
    ],
    "grammars": [
      {
        "language": "witcherscript",
        "scopeName": "source.ws",
        "path": "./syntaxes/ws.tmLanguage.json"
      }
    ]
  },
  "icon": "icon.png",

  "scripts": {
    "package": "vsce package -o witcherscript-ide.vsix",
    "vscode:prepublish": "npm run build-base -- --minify",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch=forever",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
  },
  "dependencies": {
    "path": "^0.12.7",
    "vscode-languageclient": "^9.0.0",
    "vscode-languageserver-protocol": "^3.17.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.1",
    "@vscode/vsce": "^2.19.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.18.12"
  }
}
